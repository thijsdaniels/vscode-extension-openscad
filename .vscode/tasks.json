{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: compile",
      "detail": "Compile extension and webview",
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": {
          "regexp": "^> (.+):(\\d+):(\\d+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*rebuilding\\.\\.\\.$",
          "endsPattern": "^\\s*rebuilt in"
        }
      }
    }
  ]
}
